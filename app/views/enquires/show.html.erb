     <th style="background-color:black;color: white;"></th>

    <th style="background-color:black;color: white;"><%#=link_to "Print All Pay Slip", {:action=>'pay_slips'}, :class=>"btn btn-success" %></th>
  </tr>
<%#@sum=0%>
<%@enquires.each do |a|%>

  <tr>
