    <td><%=a.phone_no%></td>
    <td><%=a.email%></td>
    <td><%=a.course%></td>
    <td><%#=link_to "edit", {:controller=>'salaries',:action=>'edit',:id=>a.id},:class=>"btn-small btn-inverse"%></td>
    </tr>
<%#@sum+=a.net_payable%>
<%end%>

</table>
